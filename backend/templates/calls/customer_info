<div x-data x-init='
        Alpine.store("eventFilters").activism = {{ "true" if customer.filter_d else "false" }};
        Alpine.store("eventFilters").lecture  = {{ "true" if customer.likes_lecture else "false" }};
        Alpine.store("eventFilters").parties  = {{ "true" if customer.filter_a else "false" }};
        Alpine.store("eventFilters").politics  = {{ "true" if customer.filter_b else "false" }};
        Alpine.store("customer").comment = {{ customer.comment | tojson | safe }};
'>
</div>

<script>
    document.addEventListener('alpine:init', () => {
        if (!$store.customer) Alpine.store('customer', { comment: "" });
        Alpine.store("customer").comment= {{ customer.comment | tojson | safe }}
    };
});
</script>

